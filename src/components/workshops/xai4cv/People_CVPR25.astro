---
// Import the data directly from the json provided
import peopleData from '../../../data/workshops/xai4cv/people_list_cvpr25.json';

/**
 * Props definition to match Speakers component logic
 * @param people - Optional array of person objects
 * @param lgSize - Grid size for large screens (default 4 results in 3 columns)
 */
interface Props {
  people?: Array<{
    name: string;
    website: string;
    img_url: string;
    organization: string;
  }>;
  lgSize?: number;
}

const { people: propsPeople, lgSize = 4 } = Astro.props;
const selectedPeople = propsPeople || peopleData.people;
const base = import.meta.env.BASE_URL;

// Calculate columns for the grid (12 / 4 = 3 columns)
const lgColumns = 12 / lgSize;
---

<div class="xai-people-grid">
  {selectedPeople.map((person) => (
    <div class="xai-person-card">
      <a href={person.website} target="_blank" rel="noopener" class="xai-avatar-link">
        <img 
          src={`${base}${person.img_url}`.replace('//', '/')} 
          alt={person.name} 
          class="xai-avatar-img" 
        />
      </a>
      
      <div class="xai-person-info">
        <a href={person.website} target="_blank" rel="noopener" class="xai-name-link">
          <strong>{person.name}</strong>
        </a>
        <p class="xai-org-text">{person.organization}</p>
      </div>
    </div>
  ))}
</div>

<style define:vars={{ lgColumns }}>
  /* Grid Container */
  .xai-people-grid {
    display: grid;
    grid-template-columns: repeat(1, minmax(0, 1fr)); /* Mobile: 1 column */
    gap: 30px 20px;
    justify-items: center;
    text-align: center;
    margin-top: 30px;
  }

  /* Individual Card */
  .xai-person-card {
    width: 100%;
    max-width: 200px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Avatar Image */
  .xai-avatar-img {
    width: 110px;
    height: 110px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 12px;
    border: 1px solid #eee;
    transition: opacity 0.2s ease-in-out;
  }

  .xai-avatar-img:hover {
    opacity: 0.8;
  }

  /* Typography */
  .xai-name-link {
    text-decoration: none;
    color: #428bca !important; /* Specific XAI4CV blue */
    font-size: 16px;
    display: block;
    line-height: 1.3;
  }

  .xai-name-link:hover {
    text-decoration: underline;
  }

  .xai-org-text {
    margin: 5px 0 0 0 !important;
    font-size: 13px !important;
    color: #777 !important;
    line-height: 1.3 !important;
    font-weight: 400;
  }

  /* Responsive Breakpoints */
  @media (min-width: 768px) {
    .xai-people-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (min-width: 1200px) {
    .xai-people-grid {
      grid-template-columns: repeat(var(--lgColumns), minmax(0, 1fr));
    }
  }
</style>