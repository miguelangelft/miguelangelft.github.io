---
import speakersData from '../../../data/workshops/xai4cv/speakers_list_cvpr25.json';

const {
  speakers = speakersData.speakers,
  lgSize = 4,
} = Astro.props;

// Calculate column spans (12-column logic: 12 / 4 = 3 columns)
const lgColumns = 12 / lgSize;
---

<div class="people-container">
  {speakers.map((person) => (
    <div class="grid-item">
      <a href={person.website} target="_blank" rel="noopener" class="avatar-link">
        <img src={person.img_url} alt={person.name} class="avatar" />
      </a>
      
      <a href={person.website} target="_blank" rel="noopener" class="name-link">
        <p class="name"><strong>{person.name}</strong></p>
      </a>
      
      <p class="organization">{person.organization}</p>
    </div>
  ))}
</div>

<style define:vars={{ lgColumns }}>
  .people-container {
    display: grid;
    grid-template-columns: repeat(1, minmax(0, 1fr));
    gap: 1.5rem;
    justify-items: center;
    text-align: center;
    margin-top: 2rem;
  }

  .grid-item {
    width: 100%;
    max-width: 250px;
  }

  .avatar {
    width: 110px;
    height: 110px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto;
    display: block;
    border: 1px solid #eee;
    transition: opacity 0.2s;
  }

  .avatar:hover {
    opacity: 0.8;
  }

  .name-link {
    text-decoration: none;
    color: #428bca; /* Consistent link color from XAI4CV */
  }

  .name {
    margin: 10px 0 2px 0;
    font-size: 1.05rem;
    line-height: 1.4;
  }

  .organization {
    margin: 0;
    font-size: 0.85rem;
    color: #777;
    line-height: 1.3;
  }

  /* Responsive Grid matching People component */
  @media (min-width: 768px) {
    .people-container {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (min-width: 1200px) {
    .people-container {
      grid-template-columns: repeat(var(--lgColumns), minmax(0, 1fr));
    }
  }
</style>