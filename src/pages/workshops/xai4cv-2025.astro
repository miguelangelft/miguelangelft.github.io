---
// Import the main layout from your theme
import BaseLayout from '../../layouts/BaseLayout.astro';
import Speakers from '../../components/workshops/xai4cv/Speakers_CVPR25.astro';
import People from '../../components/workshops/xai4cv/People_CVPR25.astro';

// Move academicons to your public/css/ folder
const academiconsLink = `${import.meta.env.BASE_URL}/css/academicons.min.css`;
---

<BaseLayout title="XAI4CV @ CVPR 2025">
  <div class="post">
    <header class="post-header">
      <h1 class="post-title">The 4th Explainable AI for Computer Vision (XAI4CV) Workshop at CVPR 2025</h1>
      <p class="post-description">June 11, 2025 • Nashville, TN</p>
    </header>

    <article>
      <section class="info-box">
        <p>
          <strong><i class="ai ai-cv"></i> Recording:</strong> 
          <a href="https://www.youtube.com/watch?v=Y47yian9rnY" target="_blank">YouTube</a><br />
          <strong>Date & Time:</strong> June 11, 2025, 1pm–5pm (CDT)<br />
          [cite_start]<strong>Location:</strong> Music City Center, Nashville, TN [cite: 2]
        </p>
      </section>

      <section>
        <h2>Motivation</h2>
        <p>
          Explainability of computer vision systems is critical for people to effectively use and interact with them...
        </p>
      </section>

      <section>
        <h2>Schedule</h2>
        <div class="table-responsive">
          <table class="table table-sm table-borderless">
            <tbody>
              <tr><th scope="row">13:00–13:10</th><td>Opening</td></tr>
              [cite_start]<tr><th scope="row">13:10–13:35</th><td>Invited Talk – Tsui‑Wei (Lily) Weng [cite: 3]</td></tr>
              [cite_start]<tr><th scope="row">13:35–14:00</th><td>Invited Talk – Mihaela van der Schaar [cite: 3]</td></tr>
              [cite_start]<tr><th scope="row">14:00–14:25</th><td>Invited Talk – Klaus‑Robert Müller [cite: 3]</td></tr>
              [cite_start]<tr><th scope="row">14:25–14:50</th><td>Invited Talk – Chinasa T. Okolo [cite: 3]</td></tr>
              [cite_start]<tr><th scope="row">14:50–15:20</th><td>Spotlight Session 1 [cite: 3]</td></tr>
              [cite_start]<tr><th scope="row">15:20–16:10</th><td>Poster Session [cite: 3]</td></tr>
              [cite_start]<tr><th scope="row">16:10–16:35</th><td>Invited Talk – Junfeng He [cite: 3]</td></tr>
              [cite_start]<tr><th scope="row">16:35–16:55</th><td>Spotlight Session 2 [cite: 3]</td></tr>
              [cite_start]<tr><th scope="row">16:55–17:00</th><td>Closing [cite: 3]</td></tr>
            </tbody>
          </table>
        </div>
      </section>

      <section>
        <h2>Invited Speakers</h2>
        <Speakers />
      </section>

      <section>
        <h2>Organizers</h2>
        <People />
      </section>

      <section>
        <h2>Contact</h2>
        <p>Email: <a href="mailto:xai4cv2025@googlegroups.com">xai4cv2025@googlegroups.com</a></p>
      </section>
    </article>
  </div>
</BaseLayout>

<style>
  /* Use cvfolio-compatible variables */
  .info-box {
    background-color: var(--global-code-bg-color);
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 2rem;
  }
  h2 {
    margin-top: 3rem;
    font-weight: 600;
    border-bottom: 1px solid var(--global-divider-color);
    padding-bottom: 0.5rem;
  }
  .table th {
    white-space: nowrap;
    color: var(--global-theme-color);
  }
</style>

<link rel="stylesheet" href={academiconsLink} />