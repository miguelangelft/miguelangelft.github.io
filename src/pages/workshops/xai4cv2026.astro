    background-color: #013763 !important;
    border-bottom: 1px solid #e7e7e7;
    min-height: 60px;
    width: 100%;
    position: fixed;
    top: 0;
    z-index: 9999;
    display: flex;
    align-items: center;
  }

  .nav-container {
    max-width: 1140px; /* Standard wide-screen container width */
    width: 100%;
    margin: 0 auto;
    padding: 0 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-brand {
    font-size: 25px;
    font-weight: 700;
    color: #ffffff !important; /* Muted gray text */
    text-decoration: none !important;
    padding: 15px 0;
  }

  .nav-brand:hover {
    color: #5e5e5e !important; /* Darkens on hover */
  }

  .nav-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
  }

  .nav-links li {
    display: flex;
    align-items: center;
  }

  .nav-links a {
    color: #ffffff !important;
    text-decoration: none !important;
    font-size: 13px;
    text-transform: uppercase;
    font-weight: 400;
    padding: 15px 12px;
    transition: color 0.2s ease-in-out;
  }

  .nav-links a:hover {
    color: #333 !important; /* High contrast hover color */
  }

